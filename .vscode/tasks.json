{
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: gcc générer le fichier actif",
        "command": "/usr/bin/gcc",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Tâche générée par le débogueur."
      },
      {
        "label": "build_ubuntu",
        "type": "shell",
        "command": "/usr/bin/gcc",
        "args": [
          "*.c",
          "cJSON/cJSON.c",
          "-o",
          "prog",
          "-g",
          "-lSDL2",
          "-lSDL2main",
          "-lSDL2_ttf",
          "-lm",
          "-lSDL2_mixer",
          "-lSDL2_gfx",
          "-lSDL2_image"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Generated task for building all .c files with gcc"
      },
      {
        "label": "build_test_ubuntu",
        "type": "shell",
        "command": "/usr/bin/gcc",
        "args": [
          "tests/test6.c",
          "-o",
          "prog",
          "-g",
          "-lSDL2",
          "-lSDL2main",
          "-lSDL2_ttf",
          "-lm",
          "-lSDL2_mixer",
          "-lSDL2_gfx",
          "-lSDL2_image"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Generated task for building all .c files with gcc"
      },
      {
        "label": "build_windows",
        "type": "shell",
        "command": "gcc",
        "args": [
            "*.c",
            "-g",
            "-o",
            "test"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": [
            "$gcc"
        ]
    }
    ],
    "version": "2.0.0"
  }
